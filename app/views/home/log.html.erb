<div ng-controller="log">
  <h1 class='page-header'>Log Game</h1>
  
  <div class="alert alert-danger" role="alert" ng-show="error">
    Check for all your inputs
  </div>

  <div class="row form-group">
    <span>Date Played:</span>
    <input type="date" ng-model="date_played" class="form-control"/>
  </div>
  
  <div class="row form-group">
    <span>Opponent:</span>
    <select ng-model="selected_user" class="form-control"
            ng-options="user.email for user in users">
      <option value="" selected disabled="disabled">
          Select your opponent
       </option>
    </select>
  </div>
  
  <div class="row form-group">
    <span>Your Score:</span>
    <input ng-model="your_score" maxlength="2" class="form-control"/>
  </div>
  
  <div class="row form-group">
    <span>Their Score:</span>
    <input ng-model="their_score" maxlength="2" class="form-control"/>
  </div>
  <button type="button" class="btn btn-success" ng-click="logGame()">Save</button>
  <button type="button" class="btn btn-primary" ng-click="clean()">Cancel</button>
</div>
